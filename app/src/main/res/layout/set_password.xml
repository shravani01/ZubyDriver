<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/add_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            tools:context=".view.ridermanagement.activity.RiderInformationManagementActivity"
            >

            <TextView
                android:id="@+id/reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/help"
                android:padding="17dp"
                android:text="Set Your Password"
                android:textColor="#99000000"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"/>

            <EditText
                android:elevation="6dp"
                android:id="@+id/set_password"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Enter Password"
                android:gravity="center"
                android:inputType="textPassword"
                android:paddingLeft="16dp"
                android:textColor="#99000000"
                android:textSize="15sp" />


        </LinearLayout>
        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:padding="10dp"
            android:background="@drawable/buttonbackground_shape"
            android:text="CONTINUE"
            android:textColor="@color/white"/>
    </RelativeLayout>
</layout>